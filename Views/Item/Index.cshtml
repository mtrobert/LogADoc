@using System.Globalization;
@*@{
    ViewData["Title"] = "Index";
}*@
@model IEnumerable<LogADoc.Models.Item>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Registered Items List</h2>
        </div>
        <div class="col-6 text-right">
            <a class="btn btn-primary" asp-controller="Item" asp-action="Create">Register New Item</a>
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Item Id
                    </th>
                    <th>
                        Item Name
                    </th>
                    <th>
                        Date Added
                    </th>
                    <th>
                        Status
                    </th>
                    <th>
                        Current Holder
                    </th>
                    <th>
                        Out To
                    </th>
                    <th>
                        Request Reason
                    </th>
                    <th>
                        Final Action Taken
                    </th>
                    <th>
                        Final Action Date
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td width="1%">@item.Id</td>
                    <td width="19%">@item.Name</td>
                    <td width="10%">@item.DateAdded.ToString().Substring(0, 10)</td>
                    <td width="10%">@item.Status.Name</td>
                    <td width="10%">@item.CurrentHolder</td>
                    <td width="10%">@(item.RequestedBy == null ? "-" : item.RequestedBy)</td>
                    <td width="10%">@(item.RequestReason == null ? "-" : item.RequestReason)</td>
                    <td width="10%">@(item.ReturnedOn < item.DateAdded ? "-" : item.ReturnedOn)</td>
                    <td width="10%">@(item.DestroyedOn < item.DateAdded ? "-" : item.DestroyedOn)</td>
                    <td width="10%">
                        <div class="w-100 btn-group" role="group">
                            <a asp-controller="Item" asp-action="Update" asp-route-Id="@item.Id" class="btn btn-primary mx-1">Update</a>
                            <a asp-controller="Item" asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-danger mx-1">Delete</a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>

        </table>
    }
    else
    {
        <p>No items created yet</p>
    }
    

</div>

